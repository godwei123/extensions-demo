{
    "manifest_version": 3,
    "name": "Network Monitor",
    "version": "1.0.0",
    "description": "Monitor network requests for Vue.js website",
    "permissions": ["webRequest", "storage", "declarativeNetRequest"],
    "host_permissions": ["https://*.bilibili.com/*"],
    "background": {
        "service_worker": "background/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon.svg",
            "48": "icons/icon.svg",
            "128": "icons/icon.svg"
        }
    },
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    }
}
