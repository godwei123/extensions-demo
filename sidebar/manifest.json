{
    "manifest_version": 3,
    "name": "Sidebar TODO",
    "version": "1.0.0",
    "description": "A sidebar TODO list extension",
    "permissions": ["storage", "activeTab", "sidePanel"],
    "action": {
        "default_icon": {
            "16": "icons/icon.svg",
            "48": "icons/icon.svg",
            "128": "icons/icon.svg"
        }
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "side_panel": {
        "default_path": "sidebar/sidebar.html"
    }
}
